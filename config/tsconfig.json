{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"module": "es2022",
		"moduleResolution": "node",
		"target": "es2021",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"moduleDetection": "force",
		"baseUrl": "../",
		"paths": {
			"/shared/*": ["src/shared/*"]
		}
	},
	"exclude": [
		"../node_modules/**/*"
	]
}

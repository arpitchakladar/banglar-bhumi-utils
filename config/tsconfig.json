{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"module": "es6",
		"moduleResolution": "node",
		"target": "es2021",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"moduleDetection": "force",
		"baseUrl": "../",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": [
		"../node_modules/**/*"
	]
}
